#include <unistd.h>

void ft_is_negative(int n)

{
	while (n < 0);

	{	
		write (1, 'N', 1);
	}
	
	else
	{
		write (1, 'P', 1);
	}
}


{
int main(void)

void ft_is_negative(int n);
	return (0);
}
